{
    "compilerOptions": {
        "target": "es5",
        "module": "es2020",

        "lib": ["es2015", "dom"],
        "declaration": true,
        
        "outDir": "./lib/esm",

        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "esModuleInterop": true,
    
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
